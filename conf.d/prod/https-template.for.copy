server {
    listen 443 ssl http2;

    # Certificate
    ssl_certificate /etc/letsencrypt/live/${HOST_ENV_VAR}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/${HOST_ENV_VAR}/privkey.pem; # managed by Certbot

    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot

    root /var/www/html;
}