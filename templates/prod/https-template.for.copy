server {
    server_name ${HOST_ENV_VAR};
    listen      443 ssl;
    listen      [::]:443 ssl;

    # Certificate
    ssl_certificate /etc/letsencrypt/live/${HOST_ENV_VAR}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/${HOST_ENV_VAR}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }
}
